@model GuitarServiceModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Guitar Image">
        <div class="card-body text-center">
            <h4>@Model.Name</h4>
            <h6>
                Price:
                <b>@String.Format("{0:f2}", Model.Price) BGN</b>
            </h6>
            <h6>(@(Model.InStock? "In Stock" : "Not In Stock"))</h6>
            <br />
            <a asp-controller="Guitar" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-success">Details</a>
            @if (this.User.Identity.IsAuthenticated)
            {
                <a asp-controller="Guitar" asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-warning">Edit</a>
                <a asp-controller="Guitar" asp-action="Delete" asp-route-id="@Model.Id"
               class="btn btn-danger">Delete</a>
